enum AccessLevel {
  ADMIN
  TEAM_LEADER
  EMPLOYEE
  AUDITOR
  SUPER_AUDITOR
}

enum ScheduleType {
  FIXED
  SUPER_FLEXI
  FLEXI
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum AttendanceStatus {
  BREAK
  DONE
  PAID_LEAVE
  ONGOING
}

enum Month {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}
